/* pages/job/job.wxss */
@import "/pages/iconfont.wxss";

.header {
    width: 100%;
    margin: 0 auto;
    padding-top: 20rpx;
    position: fixed;
    top: 0;
    left: 0;
    background-color: #fff;
}

.search, .pick {
    width: 100%;
    height: 60rpx;
    line-height: 60rpx;
    padding-bottom: 10rpx;
}

.search {
    width: 92%;
    margin: 0 auto;
}

.search-val {
    display: inline-block;
    width: 100%;
    height: 60rpx;
    -webkit-appearance: none;
    border: 2rpx solid #eee;
    font-size: 28rpx;
    border-radius: 16rpx;
    background-color: #eee;
    text-align: center;
}


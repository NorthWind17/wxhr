.pick {
    display: flex;
    justify-content: space-between;
    /* margin-bottom: 28rpx; */
    border-bottom: 2rpx solid #ccc;
    font-size: 28rpx;
    margin-bottom: 12rpx;
}

.pick picker {
    width: 40%;
    text-align: center;
}

.main {
    font-size: 28rpx;
    width: 92%;
    margin: 0 auto;
    margin-top: 202rpx;
    color: #333;
    background-color: #fff;
}

.main-list {
    border-bottom: 1px solid #eee;
}

.main-list navigator {
    padding: 20rpx 0;
}

.job-top {
    height: 40rpx;
    margin-bottom: 20rpx;
    display: flex;
    justify-content: space-between;
}

.job-name {
    font-size: 32rpx;
    /* font-weight: bold; */
    color: #000;
    margin-bottom: 12rpx;
    width: 70%;
    height: 100%;
    overflow: hidden;
    white-space: nowrap;
    text-overflow: ellipsis;
}

.job-time {
    width: 30%;
    height: 100%;
    text-align: right;
    color: #919191;
}

.job-info {
    width: 100%;
    height: 40rpx;
    margin-bottom: 12rpx;
    
}

.job-info>text {
    margin-right: 20rpx;
    background-color: #eee;
    padding: 5rpx 20rpx;
    color: #919191;
}

.job-info .job-num {
    margin-right: 0;
}
.jaddress {
    max-width: 52%;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
}

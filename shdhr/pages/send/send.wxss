/* pages/send/send.wxss */
.header{
    width: 92%;
    margin: 0 auto;
    font-size: 14px;
    margin-bottom: 40rpx;
    margin-top: 12rpx;
    padding-bottom: 20rpx;
    word-wrap: break-word;
    word-break: normal;
    border-bottom: 2rpx solid #ccc;
}
.job-name{
    font-size: 32rpx;
    font-weight: bold;
    color: #000;
    margin-bottom: 12rpx;
}
.job-info{
    margin-bottom: 12rpx;
}
.job-info text{
    margin-right: 40rpx;
}
.job-info .job-num{
    margin-right: 0;
}
.main{
    width: 92%;
    margin: 0 auto;
    font-size: 14px;
}
.main>view{
    width: 100%;
    margin-bottom: 32rpx;
}
.main>view>view{
    margin-bottom: 12rpx;
}
.main input{
    height: 76rpx;
    border: 1px solid #ccc;
    border-radius:8px;
    padding-left: 6px;
}
.main text{
    color: red;
}
.wCode,.msg{
    width: 100%;
    height: 80rpx;
}
#code2,#messge{
    width: 60%;
}
#vCode2,#nbtn{
    width: 34%;
    border-radius:8px;
}
#vCode2 image{
    width: 100%;
    height: 80rpx;
    border-radius:8px;
}
#nbtn{
    font-size: 28rpx;
    height: 100%;
    line-height: 80rpx;
    border: 0;
    background-color: rgb(30, 159, 255);
    border: 1px solid rgb(30, 159, 255);
    color: #fff;
}
#put{
    width: 100%;
    height: 80rpx;
    line-height: 80rpx;
    background-color: rgb(30, 159, 255);
    color: #fff;
    margin-bottom: 40rpx;
}